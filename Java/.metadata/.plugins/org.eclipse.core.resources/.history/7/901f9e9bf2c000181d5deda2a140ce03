import java.util.Arrays;



import java.util.Scanner;
import java.awt.*;
import java.awt.event.*;
import java.awt.geom.Arc2D;
import java.awt.geom.Ellipse2D;
import java.awt.geom.Path2D;
import java.awt.geom.Rectangle2D;

import java.awt.Graphics;

import javax.swing.*;

import javax.swing.JFrame;

public class MercMan extends JComponent {
	
	public void paintComponent(Graphics g) {
		
		
		Graphics2D g2 = (Graphics2D) g;
		super.paintComponent(g);
		
		Ellipse2D.Double hair = new Ellipse2D.Double(getWidth()/2 - ((getWidth()/4)/2) , 0, getWidth()/4, getHeight()/4.1);
		
		Ellipse2D.Double head1 = new Ellipse2D.Double(getWidth()/2 - ((getWidth()/6)/2) , hair.y + hair.height/2, getWidth()/6, getHeight()/6);
		
		Ellipse2D.Double head = new Ellipse2D.Double(getWidth()/2 - ((getWidth()/6)/2) , hair.y + hair.height/2, getWidth()/6.1, getHeight()/6.1);
		
		Ellipse2D.Double leftEye = new Ellipse2D.Double(head1.x + head1.width/2 - head1.width/3.35 , head1.y + head1.height/4, getWidth()/24, getHeight()/24);
		
		Ellipse2D.Double rightEye = new Ellipse2D.Double(head1.x + head1.width/2 + head1.width/22, head1.y + head1.height/4, getWidth()/24, getHeight()/24);
		
		Arc2D.Double mouth = new Arc2D.Double(head1.x + head1.width/3.85, head1.y + head1.height/2.15, getWidth()/12, getHeight()/12, 180, 180, Arc2D.PIE);
		
		Rectangle2D.Double nose = new Rectangle2D.Double(mouth.x + mouth.width/2.9, head1.y + head1.height/2, getWidth()/48, getHeight()/36);
		
		Ellipse2D.Double leftEar = new Ellipse2D.Double(nose.x - head1.width/2, nose.y - head1.width/12, getWidth()/48, getHeight()/24);
		
		Ellipse2D.Double rightEar = new Ellipse2D.Double(nose.x + head1.width/2, nose.y - head1.width/12, getWidth()/48, getHeight()/24);
		
		Rectangle2D.Double neck = new Rectangle2D.Double(head1.x + head1.width/3.75, head1.y + (9.5*head1.height/11), head1.width - head1.width/2, head1.height/4);
		
		Rectangle2D.Double body = new Rectangle2D.Double(head1.x - head1.width/12, neck.y + neck.height, head1.width * 1.15, head1.height * 2 );
		
		Rectangle2D.Double rightArm = new Rectangle2D.Double(body.x + body.width, body.y, body.width/4, body.height - body.height/2.5);
		
		Rectangle2D.Double leftArm = new Rectangle2D.Double(body.x - body.width/4, body.y, body.width/4, body.height - body.height/2.5);
		
		Rectangle2D.Double rightLeg = new Rectangle2D.Double(body.x, body.y + body.height, body.width/3, rightArm.height * 1.6);
		
		Rectangle2D.Double leftLeg = new Rectangle2D.Double(body.x + body.width - body.width/3, body.y + body.height, body.width/3, rightArm.height * 1.6);
		
		Rectangle2D.Double rightShoe = new Rectangle2D.Double(rightLeg.x, rightLeg.y + rightLeg.height, rightLeg.width, getHeight() - rightLeg.height - body.height - head1.height);
		
		Rectangle2D.Double leftShoe = new Rectangle2D.Double(leftLeg.x, rightLeg.y + rightLeg.height, rightLeg.width, getHeight() - rightLeg.height - body.height - head1.height);
		
		
		
		Color skin = new Color(229, 194, 152);
		Color eyes = new Color(103, 166, 197);
		Color ears = new Color(255, 220, 177);
		Color lips = new Color(255, 88, 79);
		Color shirt = new Color(127, 181, 181);
		Color shoes = new Color(66, 40, 1);
		Color jeans = new Color(0,55, 111);
		Color hairColor = new Color(51, 42, 34);

		
		this.setBackground(Color.BLACK);
		
		g2.setColor(skin);
		g2.fill(head1);
		g2.fill(rightEar);
		g2.fill(leftEar);
		
		g2.setColor(hairColor);
		g2.fill(hair);
		
		g2.setColor(skin);
		g2.fill(neck);
		g2.fill(head);
		g2.fill(rightArm);
		g2.fill(leftArm);
		
		
		g2.setColor(shirt);
		g2.fill(body);
		
		g2.setColor(jeans);
		g2.fill(rightLeg);
		g2.fill(leftLeg);
		
		g2.setColor(eyes);
		g2.fill(leftEye);
		g2.fill(rightEye);
		
		g2.setColor(ears);
		g2.fill(nose);
		
		g2.setColor(lips);
		g2.fill(mouth);
		
		g2.setColor(shoes);
		g2.fill(rightShoe);
		g2.fill(leftShoe);
		
	}
}